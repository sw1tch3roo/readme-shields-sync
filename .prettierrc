{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "jsxSingleQuote": true,
    "bracketSameLine": false,
    "endOfLine": "lf",
    "singleAttributePerLine": true,
    "overrides": [
        {
            "files": ["package.json", "package-lock.json", "*.md"],
            "options": {
                "printWidth": 80,
                "singleQuote": false,
                "tabWidth": 2,
                "trailingComma": "none",
                "useTabs": false
            }
        }
    ]
}
